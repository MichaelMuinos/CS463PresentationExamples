<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:id="@+id/gameGenreTextView"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/arrow"
        android:layout_toLeftOf="@+id/titleTextView"
        android:layout_toStartOf="@+id/titleTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:id="@+id/priceTextView"
        android:textSize="25dp"
        android:layout_alignTop="@+id/gameGenreTextView"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toStartOf="@+id/arrow"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow"
        android:background="@null"
        android:src="@drawable/right_arrow"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/priceTextView"
        android:layout_toStartOf="@+id/priceTextView"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameImage"
        android:src="@drawable/right_arrow"
        android:layout_alignBottom="@+id/gameGenreTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
